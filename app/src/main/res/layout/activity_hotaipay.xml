<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".hotaipayActivity">

        <ImageButton
            android:id="@+id/lexus_button"
            android:layout_width="323dp"
            android:layout_height="68dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/lexus_button" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/lexus_button"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_button" />

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="250dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@id/lexus_button"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu"
            app:tint="#9E9E9E" />

        <TextView
            android:id="@+id/hotaipay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="和泰Pay | Hotai Pay"
            android:textSize="@android:dimen/app_icon_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/lexus_button" />

        <ImageView
            android:id="@+id/hotaipay_pagepic"
            android:layout_width="900dp"
            android:layout_height="600dp"
            android:layout_marginTop="100dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/hotaipay_title"
            app:srcCompat="@drawable/hotaipay" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="778dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hotaipay_pagepic">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/teach1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/hotaipay1" />

                <ImageView
                    android:id="@+id/teach2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:srcCompat="@drawable/hotaipay2" />

                <ImageView
                    android:id="@+id/teach3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:srcCompat="@drawable/hotaipay3" />

                <ImageView
                    android:id="@+id/teach4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:srcCompat="@drawable/hotaipay4" />

                <ImageView
                    android:id="@+id/teach5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:srcCompat="@drawable/hotaipay5" />

                <ImageView
                    android:id="@+id/teach6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:srcCompat="@drawable/hotaipay6" />

                <ImageView
                    android:id="@+id/teach7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:srcCompat="@drawable/hotaipay7" />
            </LinearLayout>


        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>